<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corsoandroid.giustomangia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic2_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic2_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.RegisterActivity">
        </activity>

        <activity android:name=".ui.activities.CheckoutActivity">
        </activity>

        <activity android:name=".ui.activities.MainActivity">
        </activity>


    </application>

</manifest>
