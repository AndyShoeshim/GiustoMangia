<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundRestoraunt">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="@dimen/cardview_default_radius"
        android:layout_marginBottom="@dimen/cardview_default_radius"
        card_view:cardBackgroundColor="@color/colorBackgroundRestoraunt"
        >

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         >

    <TextView
        android:id="@+id/restaurantName"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/restaurantIndirizzo"
        android:textColor="@color/colorDarkTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/restaurantOrdineMinimo"
        android:textColor="@color/colorDarkTheme"
        android:text="@string/ordineMin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

     </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>